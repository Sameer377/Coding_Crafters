<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="-2dp"
    android:layout_marginTop="-2dp"
    android:layout_marginRight="-2dp"
    android:background="@drawable/profile_img_cardbg">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgprofile_main"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profilebg"
        android:scaleType="fitXY"
        android:src="@drawable/person_filled"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@id/imgprofile_main"
        android:orientation="vertical">

        <TextView
            android:id="@+id/designation_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:text="President"
            android:textColor="@color/soft_red"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:text="Ketan Bhogshetti"
            android:textColor="@color/teal_200"
            android:textSize="20dp" />

    </LinearLayout>
</RelativeLayout>

 <ScrollView
     android:padding="20dp"
     android:layout_marginTop="2dp"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Details"
             android:textColor="@color/soft_red"
             android:textSize="20dp"
             android:fontFamily="@font/inter_extrabold"/>

         <androidx.cardview.widget.CardView
             app:cardCornerRadius="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/cardbg"
             android:layout_marginTop="10dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="20dp"
                 android:orientation="vertical"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Email"
                     android:textColor="@color/teal_200"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textStyle="bold"
                     android:textSize="18dp"/>
                 <TextView
                     android:id="@+id/email_profile"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="ketanbhogshetti@gmail.com"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textColor="@color/white"
                     android:textSize="18dp"/>
                  <TextView
                      android:layout_marginTop="5dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Phone No"
                     android:textColor="@color/teal_200"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textStyle="bold"
                     android:textSize="18dp"/>
                 <TextView
                     android:id="@+id/phone_profile"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="8999596143"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textColor="@color/white"
                     android:textSize="18dp"/>
                 <TextView
                      android:layout_marginTop="5dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Persuing"
                     android:textColor="@color/teal_200"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textStyle="bold"
                     android:textSize="18dp"/>
                 <TextView
                     android:id="@+id/persuing_profile"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="3rd year"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textColor="@color/white"
                     android:textSize="18dp"/>
                <TextView
                      android:layout_marginTop="5dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Password"
                     android:textColor="@color/teal_200"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textStyle="bold"
                     android:textSize="18dp"/>
                 <TextView
                     android:id="@+id/password_profile"
                     android:inputType="textPassword"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="ket5555"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textColor="@color/white"
                     android:textSize="18dp"/>


                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <TextView
                         android:id="@+id/updated_profile"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentBottom="true"
                         android:text="Updated on : 01 nov 2023"
                         android:textColor="@color/white"
                         android:textSize="10dp" />

                     <androidx.appcompat.widget.AppCompatButton
                         android:layout_alignParentRight="true"
                         android:layout_width="wrap_content"
                         android:layout_height="30dp"
                         android:text="Edit Details"
                         android:textAllCaps="false"
                         android:textSize="12dp"
                         android:fontFamily="@font/baloo_bhai_2_medium"
                         android:textStyle="bold"
                         android:background="@drawable/btn_teal"/>
                 </RelativeLayout>


             </LinearLayout>

         </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Social Media"
             android:textColor="@color/soft_red"
             android:textSize="20dp"
             android:fontFamily="@font/inter_extrabold"/>

         <androidx.cardview.widget.CardView
             app:cardCornerRadius="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:cardBackgroundColor="@color/cardbg"
             android:layout_marginTop="10dp"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="20dp"
                 android:orientation="vertical"
                 >

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Set up social Media Accounts"
                     android:fontFamily="@font/baloo_bhai_2_medium"
                     android:textColor="@color/white"
                     android:textSize="18dp"/>


                 <LinearLayout
                     android:gravity="center"
                     android:layout_marginTop="10dp"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <ImageView
                         android:padding="3dp"
                         android:layout_width="50dp"
                         android:layout_height="50dp"
                         android:src="@drawable/twitter_logo"
                         />
                     <ImageView
                         android:layout_width="50dp"
                         android:padding="5dp"
                         android:layout_height="50dp"
                         android:layout_marginStart="30dp"
                         android:src="@drawable/linkedin_logo"
                         />
                     <ImageView
                         android:layout_width="50dp"
                         android:padding="5dp"
                         android:layout_height="50dp"
                         android:layout_marginStart="30dp"
                         android:src="@drawable/instagram_logo"
                         />
                     <ImageView
                         android:padding="4dp"
                         android:layout_width="45dp"
                         android:layout_height="45dp"
                         android:layout_marginStart="30dp"
                         android:src="@drawable/github_logo"
                         android:background="@drawable/github_logo_bg"
                         />


                 </LinearLayout>


             </LinearLayout>

         </androidx.cardview.widget.CardView>


         <androidx.appcompat.widget.AppCompatButton
             android:layout_width="100dp"
             android:layout_height="35dp"
             android:text="Logout"
             android:textAllCaps="false"
             android:id="@+id/logout_profile"
             android:background="@drawable/red_logout_btn_bg"
             android:textColor="#101010"
             android:fontFamily="@font/baloo_bhai_2_medium"
             android:textStyle="bold"
             android:layout_gravity="right"
             android:layout_marginTop="20dp"
             />

     </LinearLayout>

 </ScrollView>

</LinearLayout>