<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:id="@+id/cd"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/msg_profile_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/community_profile_card"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>



</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxWidth="200dp"
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:text="President"
                android:textColor="@color/soft_red"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/msg_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/baloo_bhai_2_medium"
                android:text="1 jan 2024"
                android:textColor="@color/teal_200"
                android:textSize="12dp"
                android:layout_centerVertical="true"

                 />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_below="@id/rel_card_dec1"
            android:id="@+id/img_cd"
            app:cardCornerRadius="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="2dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/msg_attached_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/community_profile_card"
            android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today there  android Today is a session on there is a session on android"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:textSize="14dp"
            android:linksClickable="true"
            android:autoLink="web"
            />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show more"
            android:textColor="@color/card_outline"
            android:textSize="12dp"
            android:fontFamily="@font/inter_extrabold"
            />
        <TextView
            android:id="@+id/msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:10 pm"
            android:layout_alignParentRight="true"
            android:textColor="@color/card_outline"
            android:textSize="12dp"
            android:fontFamily="@font/baloo_bhai_2_medium"
            />
        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>