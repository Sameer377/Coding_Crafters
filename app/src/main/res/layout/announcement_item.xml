<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



<ImageView
    android:layout_marginTop="2dp"
    android:background="@drawable/community_profile_card"
    android:layout_width="60dp"
    android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:text="President"
                android:textColor="@color/soft_red"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/baloo_bhai_2_medium"
                android:text="1 FEB 2024"
                android:textColor="@color/teal_200"
                android:textSize="12dp"
                android:layout_centerVertical="true"

                 />
        </RelativeLayout>


        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today there  android Today is a session on there is a session on android"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo_bhai_2_medium"
            android:textSize="14dp"
            android:linksClickable="true"
            android:autoLink="web"
            />
        <TextView
            android:id="@+id/txt_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show more"
            android:textColor="@color/card_outline"
            android:textSize="12dp"
            android:fontFamily="@font/inter_extrabold"
            />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>